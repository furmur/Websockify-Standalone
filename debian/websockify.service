[Unit]
Description= WS to TCP proxy
After=local-fs.target network.target time-sync.target

[Service]
EnvironmentFile=/etc/default/websockify
PIDFile=/run/websockify.pid
User=websockify
PermissionsStartOnly=true
ExecStart=/usr/bin/websockify -i ${ADDR} -p ${PORT}

#Restart=on-failure
#RestartSec=1s

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=websockify

[Install]
WantedBy=multi-user.target
